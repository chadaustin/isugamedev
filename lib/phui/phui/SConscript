from os import path

Import('env PREFIX')

classes = [
    'Button',
    'CheckBox',
    'Font',
    'FontRenderer',
    'Insets',
    'Label',
    'ListBox',
    'Rect',
    'RootFactory',
    'RootWidget',
    'TextField',
    'Widget',
    'WidgetContainer',
    'Window',
]

sources = []

headers = [
    'Color.h',
    'Input.h',
    'Point.h',
    'phui.h',
    'phuiCommon.h',

    # extra bridge headers
    'SDLBridge.h',
    'GLUTBridge.h',
]

sources.extend(map(lambda n: n + '.cpp', classes))
headers.extend(map(lambda n: n + '.h',   classes))

libraries = []
libraries.append(env.Library(target = 'phui', source = sources))
libraries.append(env.Library(target = 'phuiSDL',  source = 'SDLBridge.cpp'))
libraries.append(env.Library(target = 'phuiGLUT', source = 'GLUTBridge.cpp'))

for h in headers:
    env.Install(path.join(PREFIX, 'include', 'phui'), h)
    
env.Install(path.join(PREFIX, 'lib'), libraries)
