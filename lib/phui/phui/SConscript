Import('env')


# XXXaegis - do we need headers?

headers = [
    'phui',
    'Button',
    'Color',
    'RootWidget',
    'WidgetContainer',
    'Widget',
    'Window',
]

sources = [
    'Button',
    'RootFactory',
    'RootWidget',
    'WidgetContainer',
    'Window',
]

# add proper extensions to filenames
headers = map(lambda fn: fn + '.h', headers)
sources = map(lambda fn: fn + '.cpp', sources)

env.Library(target = 'phui', source = sources)
