from os import path

Import('env PREFIX')

classes = [
    'Button',
    'Font',
    'FontRenderer',
    'Insets',
    'Label',
    'ListBox',
    'Rect',
    'RootFactory',
    'RootWidget',
    'TextField',
    'Widget',
    'WidgetContainer',
    'Window',
]

sources = []

headers = [
    'Color.h',
    'Input.h',
    'Point.h',
    'phui.h',
    'phuiCommon.h'
]

sources.extend(map(lambda n: n + '.cpp', classes))
headers.extend(map(lambda n: n + '.h',   classes))

library = env.Library(target = 'phui', source = sources)

for h in headers:
    env.Install(path.join(PREFIX, 'include', 'phui'), h)
    
env.Install(path.join(PREFIX, 'lib'), library)
