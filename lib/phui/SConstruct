# build with 'scons'
# see doc/build.txt

import sys
import os
import string

execfile('glut_libs.py')


Default('.')        # build everything by default

# Setup a debug target
if ARGUMENTS.get('debug'):
   CXXFLAGS=['-g']
else:
   CXXFLAGS=[]

# setup the environment
env = Environment(CPPPATH = '#',
                  LIBPATH = '#phui',
                  ENV = os.environ,
                  CXXFLAGS = CXXFLAGS + ['-DDEBUG_MEMORY=1'])
Export('env GLUT_LIBS')


# Determine the font libraries
FONT_LIBS = ['gltt', 'ttf']
Export('env FONT_LIBS')

# process subdirectories
SConscript('phui/SConscript')
SConscript('examples/SConscript')
